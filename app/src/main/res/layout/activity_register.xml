<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register_activity">

        <TextView
            android:id="@+id/txt_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_name"
            android:text="Username: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_age"
            android:text="Password: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_conpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_pass"
            android:text="Confirm Password: "
            android:textSize="18sp" />

    <TextView
        android:id="@+id/txt_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_user"
        android:text="Brithday: "
        android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textSize="18sp" />

    <EditText
            android:id="@+id/et_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/txt_name"
            android:layout_alignLeft="@id/et_conpass"
            android:layout_toRightOf="@id/txt_name"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_name"
            android:layout_alignBaseline="@id/txt_user"
            android:layout_alignLeft="@id/et_conpass"
            android:layout_toRightOf="@id/txt_user"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName" />

    <EditText
            android:id="@+id/et_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_bday"
            android:layout_alignBaseline="@id/txt_pass"
            android:layout_alignLeft="@id/et_conpass"
            android:layout_toRightOf="@id/txt_pass"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/et_conpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_pass"
            android:layout_alignBaseline="@id/txt_conpass"
            android:layout_toRightOf="@id/txt_conpass"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_conpass"
        android:onClick="Regis"
        android:text="Register" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_conpass"
        android:layout_toRightOf="@id/btn_register"
        android:onClick="backLogin"
        android:text="Back" />

    <EditText
        android:id="@+id/et_bday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:layout_alignLeft="@id/et_conpass"
        android:layout_alignBaseline="@id/txt_age"
        android:layout_toRightOf="@id/txt_age"
        android:layout_below="@id/et_user"/>
</RelativeLayout>